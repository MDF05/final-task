<%- contentFor("css")  %>

<%- contentFor("body")  %>
<div class="container-fluid py-5 px-sm-5 px-1  ">
    <div class="header col-12 ">
        <div class="d-flex justify-content-between align-items-center flex-column flex-sm-row ">
            <h1 class="color-skyblue">Provinsi </h1>
            <div class="mt-3 mt-sm-0">
                <a class="btn btn-outline-primary" href="/provinsi">add provinsi</a>
            </div>
        </div>
        <div class="d-flex mt-4">
            <form action="" class="form-control bg-transparent border-0">
                <select name="provinsi&kabupaten" class="px-2 bg-transparent color-skyblue border-skyblue">
                    <option value="provinsi" class="bg-transparent">pulau</option>
                    <% const temp = [] %>
                    <% for (let i = 0; i < provinsi.length; i++ ) { 
                        if(temp.includes(provinsi[i].pulau)) break 
                         temp.push(provinsi[i].pulau) 
                    %>
                    <option value="<%=provinsi[i].pulau  %>"><%= provinsi[i].pulau %></option>
                    <% }  %>
                </select>
            </form>
        </div>
    </div>
    <div class="body mt-5 p-0 d-flex justify-content-center flex-wrap">
        <div class="card col-11 col-sm-6 col-lg-3 mt-4 mt-sm-2 mt-lg-0 bg-transparent px-5">
            <div
                class="header d-flex flex-column align-items-center justify-content-center row border border-2 border-skyblue mb-4">
                <img src="/assets//images/jawa-barat.png" alt="image-provinsi" class="col-12 my-4">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <h3 class="color-skyblue text-capitalize">jawa barat</h3>
                    <p class="text-secondary">19 - Agustus - 1945</p>
                </div>
            </div>
            <div class="footer row">
                <button class="btn bg-skyblue">detail</button>
            </div>
        </div>
    </div>
</div>

<%- contentFor("js")  %>